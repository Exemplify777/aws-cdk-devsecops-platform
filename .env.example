# DevSecOps Platform Configuration
# Copy this file to .env and update with your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Account IDs for different environments
DEV_ACCOUNT_ID=123456789012
STAGING_ACCOUNT_ID=123456789013
PROD_ACCOUNT_ID=123456789014

# Project Configuration
PROJECT_NAME=devsecops-platform
ORGANIZATION=data-ai-org

# VPC Configuration
VPC_CIDR=10.0.0.0/16
AVAILABILITY_ZONES=us-east-1a,us-east-1b

# Security Configuration
ENABLE_VPC_FLOW_LOGS=true
ENABLE_CLOUDTRAIL=true
ENABLE_CONFIG=true
ENABLE_GUARDDUTY=true
ENABLE_SECURITY_HUB=true

# Monitoring Configuration
ENABLE_DETAILED_MONITORING=true
LOG_RETENTION_DAYS=30

# Database Configuration
DB_INSTANCE_CLASS=db.t3.micro
DB_ALLOCATED_STORAGE=20
DB_BACKUP_RETENTION=7

# Container Configuration
CONTAINER_CPU=256
CONTAINER_MEMORY=512

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=128

# API Configuration
API_THROTTLE_RATE=1000
API_THROTTLE_BURST=2000

# Cost Management
COST_ALERT_THRESHOLD=100.0

# Notification Configuration
NOTIFICATION_EMAIL=platform-team@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# GitHub Configuration
GITHUB_ORG=your-organization
GITHUB_TOKEN=ghp_your_github_token_here

# AI/ML Configuration
ENABLE_SAGEMAKER=true
ENABLE_BEDROCK=true

# Feature Flags
ENABLE_AI_TOOLS=true
ENABLE_PORTAL=true
ENABLE_ADVANCED_MONITORING=true

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO

# Security Scanning Configuration
ENABLE_SECURITY_SCANNING=true
SCAN_ON_DEPLOY=true
COMPLIANCE_FRAMEWORKS=SOC2,ISO27001,GDPR

# Template Configuration
DEFAULT_TEMPLATE=data-pipeline
TEMPLATE_REPOSITORY=https://github.com/your-org/ddk-templates

# Monitoring Thresholds
ERROR_RATE_THRESHOLD=0.01
LATENCY_THRESHOLD=5000
COST_THRESHOLD_PERCENTAGE=80
